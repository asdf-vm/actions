{
  "name": "@asdf-vm/actions",
  "version": "1.0.0",
  "description": "asdf github actions",
  "repository": "https://github.com/asdf-vm/actions",
  "author": "Victor Borja <vborja@apache.org>",
  "license": "Apache-2.0",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "fmt": "prettier --write \"**/*.{js,json,md,yml}\"",
    "build:install": "ncc build lib/install/main.js -o install -m",
    "build:plugin-test": "ncc build lib/plugin-test/main.js -o plugin-test -m",
    "build:plugins-add": "ncc build lib/plugins-add/main.js -o plugins-add -m",
    "build:setup": "ncc build lib/setup/main.js -o setup -m",
    "build": "npm-run-all -p build:*"
  },
  "dependencies": {
    "@actions/core": "1.2.2",
    "@actions/exec": "1.0.3",
    "@actions/github": "2.1.0",
    "@actions/io": "1.0.2"
  },
  "devDependencies": {
    "@zeit/ncc": "0.21.1",
    "husky": "4.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "1.19.1"
  }
}
